{
  "name": "@prb/math",
  "description": "Smart contract library for advanced fixed-point math",
  "version": "2.5.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://github.com/paulrberg"
  },
  "bugs": {
    "url": "https://github.com/paulrberg/prb-math/issues"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.6.2",
    "decimal.js": "^10.3.1",
    "evm-bn": "^1.1.1",
    "mathjs": "^10.6.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/abstract-signer": "^5.6.2",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/constants": "^5.6.1",
    "@ethersproject/providers": "^5.6.8",
    "@ethersproject/wallet": "^5.6.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/mocha-each": "^2.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "chai": "^4.3.6",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "mocha-each": "^2.0.1",
    "nyc": "^15.1.0",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rollup": "^2.75.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "/contracts",
    "/dist/**/*.d.ts",
    "/dist/**/*.d.ts.map",
    "/dist/**/*.js",
    "/dist/**/*.js.map",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/paulrberg/prb-math#readme",
  "keywords": [
    "blockchain",
    "ethereum",
    "library",
    "math",
    "smart-contracts",
    "solidity",
    "typescript"
  ],
  "license": "Unlicense",
  "main": "./dist/node/index.js",
  "packageManager": "yarn@3.2.0",
  "peerDependencies": {
    "@ethersproject/bignumber": "5.x",
    "evm-bn": "1.x",
    "mathjs": "10.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrberg/prb-math"
  },
  "resolutions": {
    "@ethersproject/wallet": "^5.5.0"
  },
  "scripts": {
    "build": "yarn build:node && yarn build:browser",
    "build:browser": "yarn rollup --config ./rollup.config.ts",
    "build:node": "tsc --project ./tsconfig.prod.json",
    "clean": "shx rm -rf ./.nyc_output ./artifacts ./coverage-contracts ./coverage-ts ./dist ./typechain ./coverage.json ",
    "clean:node_modules": "shx rm -rf ./node_modules",
    "compile": "hardhat compile",
    "coverage": "yarn coverage:contracts && yarn coverage:ts",
    "coverage:contracts": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/contracts/**/*.test.ts\"",
    "coverage:ts": "yarn nyc --nycrc-path ./.nycrc.yml mocha",
    "generate:types": "hardhat typechain",
    "lint": "yarn lint:contracts && yarn lint:ts && yarn prettier:check",
    "lint:contracts": "solhint --config ./.solhint.json  --ignore-path ./.solhintignore --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepack": "yarn build",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --config ./.prettierrc.yml ./.prettierignore --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yml --ignore-path ./.prettierignore \"**/*.{js,json,md,sol,ts}\"",
    "test": "yarn mocha --config ./.mocharc.yml ./test/**/*.test.ts",
    "test:contracts": "yarn mocha --config ./.mocharc.yml ./test/contracts/**/*.test.ts",
    "test:ts": "yarn mocha --config ./.mocharc.yml ./test/ts/**/*.test.ts"
  },
  "types": "./dist/node/index.d.ts"
}
