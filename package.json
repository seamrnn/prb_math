{
  "name": "prb-math",
  "description": "Smart contract library for advanced fixed-point math",
  "version": "2.4.1",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://paulrberg.com"
  },
  "bugs": {
    "url": "https://github.com/hifi-finance/prb-math/issues"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.5.0",
    "decimal.js": "^10.3.1",
    "evm-bn": "^1.1.1",
    "mathjs": "^9.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/abstract-signer": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/constants": "^5.5.0",
    "@ethersproject/providers": "^5.5.0",
    "@ethersproject/wallet": "^5.5.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/mocha-each": "^2.0.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.7",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "lodash": "^4.17.21",
    "mocha": "^9.1.3",
    "mocha-each": "^2.0.1",
    "nyc": "^15.1.0",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "rollup": "^2.58.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "shelljs": "^0.8.4",
    "shx": "^0.3.3",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "/contracts",
    "/dist/**/*.d.ts",
    "/dist/**/*.d.ts.map",
    "/dist/**/*.js",
    "/dist/**/*.js.map",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/hifi-finance/prb-math#readme",
  "keywords": [
    "blockchain",
    "ethereum",
    "library",
    "math",
    "smart-contracts",
    "solidity",
    "typescript"
  ],
  "license": "Unlicense",
  "main": "./dist/node/index.js",
  "peerDependencies": {
    "@ethersproject/bignumber": "5.x",
    "evm-bn": "1.x",
    "mathjs": "9.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hifi-finance/prb-math"
  },
  "resolutions": {
    "@ethersproject/wallet": "^5.5.0"
  },
  "scripts": {
    "build": "yarn build:node && yarn build:browser",
    "build:browser": "yarn rollup --config ./rollup.config.ts",
    "build:node": "tsc --project ./tsconfig.prod.json",
    "clean": "shx rm -rf ./.nyc_output ./artifacts ./coverage-contracts ./coverage-ts ./dist ./typechain ./coverage.json ",
    "clean:node_modules": "shx rm -rf ./node_modules",
    "compile": "hardhat compile",
    "coverage": "yarn coverage:contracts && yarn coverage:ts",
    "coverage:contracts": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/contracts/**/*.test.ts\"",
    "coverage:ts": "yarn nyc --nycrc-path ./.nycrc.yaml mocha",
    "generate:types": "hardhat typechain",
    "lint": "yarn lint:contracts && yarn lint:ts && yarn prettier:check",
    "lint:contracts": "solhint --config ./.solhint.json  --ignore-path ./.solhintignore --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepack": "yarn build",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --config ./.prettierrc.yaml ./.prettierignore --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml --ignore-path ./.prettierignore \"**/*.{js,json,md,sol,ts}\"",
    "test": "yarn mocha --config ./.mocharc.yaml ./test/**/*.test.ts",
    "test:contracts": "yarn mocha --config ./.mocharc.yaml ./test/contracts/**/*.test.ts",
    "test:ts": "yarn mocha --config ./.mocharc.yaml ./test/ts/**/*.test.ts"
  },
  "types": "./dist/node/index.d.ts"
}
